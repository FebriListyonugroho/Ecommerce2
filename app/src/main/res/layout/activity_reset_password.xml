<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Pembeli.ResetPasswordActivity">

    <RelativeLayout
            android:id="@+id/relative123"
            android:background="@color/colorPrimaryDark"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="50dp">

        <TextView
                android:id="@+id/page_title"
                android:text="Reset Password "
                android:gravity="center"
                android:textSize="20dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:textColor="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

    </RelativeLayout>

    <EditText
            android:id="@+id/find_phone_number"
            android:hint="Tolong isi nomor telepon anda"
            android:layout_width="match_parent"
            android:layout_below="@id/relative123"
            android:background="@drawable/input_design"
            android:padding="14dp"
            android:layout_margin="15dp"
            android:layout_height="wrap_content"/>

    <TextView
            android:text="Jawab pertanyaan keamanan berikut ?"
            android:id="@+id/title_question"
            android:gravity="center"
            android:textSize="26dp"
            android:layout_below="@+id/find_phone_number"
            android:layout_marginTop="35dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <EditText
            android:id="@+id/question_1"
            android:hint="Siapa Nama Ibu anda ?"
            android:layout_width="match_parent"
            android:layout_below="@id/title_question"
            android:background="@drawable/input_design"
            android:padding="14dp"
            android:layout_margin="15dp"
            android:layout_height="wrap_content"/>

    <EditText
            android:id="@+id/question_2"
            android:hint="Siapa Nama Kakekmu ?"
            android:layout_width="match_parent"
            android:layout_below="@id/question_1"
            android:background="@drawable/input_design"
            android:padding="14dp"
            android:layout_margin="15dp"
            android:layout_height="wrap_content"/>

    <Button
            android:id="@+id/verify_btn"
            android:text="Verifikasi"
            android:layout_width="match_parent"
            android:textStyle="bold"
            android:layout_below="@id/question_2"
            android:background="@drawable/buttons"
            android:textColor="@android:color/white"
            android:padding="14dp"
            android:layout_margin="15dp"
            android:layout_height="wrap_content"/>

</RelativeLayout>